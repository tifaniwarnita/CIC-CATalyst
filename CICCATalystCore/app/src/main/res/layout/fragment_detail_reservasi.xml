<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".kasir.DetailReservasiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/cic_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cic_icon_launcher"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/detail_reservasi"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Jumat, 15 April 2016"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="3">
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/jam"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:padding="3dip"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/status"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:padding="3dip"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="11.00 - 12.00"
                android:gravity="center_horizontal"
                android:padding="3dip"/>
            <TextView
                android:id="@+id/jam_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:padding="3dip"
                android:textColor="@android:color/holo_red_dark"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="12.00 - 13.00"
                android:gravity="center_horizontal"
                android:padding="3dip"/>
            <TextView
                android:id="@+id/jam_2"
